{
  "name": "dlvpro-bdd-playwright",
  "version": "1.0.0",
  "description": "BDD Playwright project for Delta Vacations Pro automation",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js",
    "test:ui": "HEADED=true cucumber-js --parallel 1",
    "test:headed": "npm run test:ui",
    "test:debug": "PWDEBUG=1 cucumber-js --parallel 1",
    "test:report": "cucumber-js --format html:reports/cucumber-report.html",
    "verify:credentials": "ts-node tests/test-credentials.ts",
    "verify:typescript": "tsc --noEmit"
  },
  "keywords": [
    "playwright",
    "bdd",
    "cucumber",
    "typescript",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@playwright/test": "^1.41.2",
    "@types/node": "^20.11.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
